<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
	<Appenders>
		<!-- Console Appender -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<!-- File Appender -->
		<File name="File"
			fileName="${sys:user.home}/CarWashAgent/logs/backend.log">
			<PatternLayout
				pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
		</File>
		
		<!-- File Appender -->
		<RollingFile name="RollingFile"
			fileName="${sys:user.home}/CarWashAgent/logs/backend_rolling.log" 
			filePattern ="${archive}/backend_rolling.log.%d{yyyy-MM-dd-hh-mm}.gz">
			<PatternLayout
				pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
		<Policies>
                <SizeBasedTriggeringPolicy size="1000KB" />
        </Policies>
            <DefaultRolloverStrategy max="1" />		
		</RollingFile>

	</Appenders>

	<Loggers>
		<!-- Log everything in Hikari -->
		<Logger name="com.zaxxer.hikari.HikariConfig" level="info" additivity="false">
			<AppenderRef ref="File" />
		</Logger>

		<!-- Log everything in Hibernate -->
		<Logger name="org.hibernate" level="debug" additivity="false">
			<AppenderRef ref="File" />
			<AppenderRef ref="Console" />
		</Logger>

		<!-- Log everything in Spring Boot -->
		<Logger name="org.springframework.boot" level="debug" additivity="false">
			<AppenderRef ref="File" />
			<AppenderRef ref="Console" />
		</Logger>

		<!-- Log everything in Spring Core -->
		<Logger name="org.springframework.core" level="info" additivity="false">
			<AppenderRef ref="File" />
		</Logger>
		
		
		<Logger name="com.icbergarts.CarWashAgent" level="debug" additivity="false">
      		<AppenderRef ref="Console" />
    	</Logger>
    	    	
		<Root level="error">
			<AppenderRef ref="File" />
		</Root>

	</Loggers>
</Configuration>